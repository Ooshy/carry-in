<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Carry_In.Pages.Home.HomeMasterPage"
             Padding="0,40,0,0"
             Title="Carry In"
             Style="{StaticResource iconsBackground}">
  <ContentPage.Content>
    <StackLayout VerticalOptions="Fill" Style="{StaticResource iconsBackground}" >
      <ListView x:Name="_menuList" VerticalOptions="FillAndExpand" SeparatorVisibility="Default">
        <ListView.ItemTemplate>
          <DataTemplate>
            <ImageCell Text="{Binding Title}" ImageSource="{Binding IconSource}" Detail="{Binding Detail}" TextColor="{StaticResource primary}" DetailColor="{StaticResource primary}" />
          </DataTemplate>
        </ListView.ItemTemplate>
      </ListView>
    </StackLayout>
  </ContentPage.Content>
</ContentPage>