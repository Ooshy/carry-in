<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Carry_In.Pages.Home.HomeDetailPage"
             xmlns:recents="clr-namespace:Carry_In.Pages.Recents"
             Style="{StaticResource iconsBackground}">

  <ScrollView>
    <StackLayout>
      <Label Text="Recently Visited" FontSize="Large" Style="{StaticResource primaryLabel}" HorizontalOptions="Center"/>
      <ListView  x:Name="RecentPlacesListView" RowHeight="100" SeparatorVisibility="Default" >
        <ListView.ItemTemplate BackgroundColor="{StaticResource primary_light}">
          <DataTemplate>
            <ViewCell>
              <Grid Padding="0,0,0,5">
                <Grid.RowDefinitions>
                  <RowDefinition Height="*" />
                  <RowDefinition Height="*" />
                  <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                  <ColumnDefinition Width="*" />
                  <ColumnDefinition Width="*" />
                  <ColumnDefinition Width="*" />
                  <ColumnDefinition Width="*" />
                  <ColumnDefinition Width="*" />
                  <ColumnDefinition Width="*" />
                  <ColumnDefinition Width="*" />
                  <ColumnDefinition Width="*" />
                  <ColumnDefinition Width="*" />
                  <ColumnDefinition Width="*" />
                  <ColumnDefinition Width="*" />
                  <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <ContentView Grid.Row="0" Grid.Column="0" Grid.RowSpan="3" Grid.ColumnSpan="6" Padding="10,5,10,5">
                  <Image  Aspect="AspectFill" Source="{Binding Source}" />
                </ContentView>
                <!--public double AverageReview { get; set; }
                public double Distance { get; set; }

                public IList<string>
                  AvailableTimes { get; set; }
                  public string Title { get; set; }
                  public string Description { get; set; }
                  public int NumberOfReviews { get; set; }

                  public double Expensiveness { get; set; }-->
                <StackLayout  Orientation="Horizontal"
                              Grid.Row="2"
                              Grid.RowSpan="1"
                              Grid.Column="11"
                              Grid.ColumnSpan="2">
                <Label Text="$"
                       Style="{StaticResource restaurantNameListLabel}"
                       VerticalOptions="Center"
                       HorizontalOptions="Start"
                       FontSize="Medium"/>
                <Label Text="{Binding Expensiveness}"
                       Style="{StaticResource restaurantNameListLabel}"
                       VerticalOptions="Center"
                       HorizontalOptions="Start"
                       FontSize="Medium"
                       />
                </StackLayout>

                <StackLayout Orientation="Horizontal"
                             Grid.Row="2"
                             Grid.RowSpan="1"
                             Grid.Column="7"
                             Grid.ColumnSpan="2">
                  <Label Text="{Binding Distance}"
                         Style="{StaticResource restaurantNameListLabel}"
                         VerticalOptions="Center"
                         HorizontalOptions="Start"
                         FontSize="Medium" />
                  <Label Text="mi"
                         Style="{StaticResource restaurantNameListLabel}"
                         VerticalOptions="Center"
                         HorizontalOptions="Start"
                         FontSize="Small"/>
                </StackLayout>

                <Label Text="{Binding Title}"
                       Style="{StaticResource restaurantNameListLabel}"
                       VerticalOptions="Center"
                       HorizontalOptions="Start"
                       FontSize="Large"
                       Grid.Row="0"
                       Grid.RowSpan="1"
                       Grid.Column="7"
                       Grid.ColumnSpan="6"/>
                <!--<Label Text="{Binding Description}"
                       Style="{StaticResource primaryLabel}"
                       HorizontalOptions="Start"
                       TextColor="#503026"
                       VerticalOptions="Center"
                       FontSize="Large"
                       Grid.Row="1"
                       Grid.RowSpan="2"
                       Grid.Column="7"
                       Grid.ColumnSpan="6" />-->

              </Grid>
            </ViewCell>
          </DataTemplate>
        </ListView.ItemTemplate>
      </ListView>
      <!--<Label Text="Nearby" FontSize="Large" Style="{StaticResource primaryLabel}" HorizontalOptions="Center"/>
      <Label Text="Favorites" FontSize="Large" Style="{StaticResource primaryLabel}" HorizontalOptions="Center"/>-->



    </StackLayout>
  </ScrollView>
</ContentPage>