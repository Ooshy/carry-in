<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Carry_In.View.Restaurant.FoodTabs.FoodPage"
             xmlns:local="clr-namespace:Carry_In.View.Restaurant;">
  <ListView x:Name="FoodList">
    <ListView.ItemTemplate>
      <DataTemplate>
        <local:FoodItemCell
            Text="{Binding Name}"
            Detail="{Binding Description}"
            TextColor="{StaticResource primary_dark}"
            DetailColor="{StaticResource primary}"/>
      </DataTemplate>
    </ListView.ItemTemplate>
  </ListView>
</ContentPage>